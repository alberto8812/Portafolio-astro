---
import {
SiAstro,
  SiMicrosoftsqlserver,
  SiNestjs,
  SiNextdotjs,
  SiPowerbi,
} from "react-icons/si";

import TechnologyCard from "./TechnologyCard.astro";
import { info, technologies } from "../assets/data";
---

<div class="w-[75%] mx-auto mt-20 mb-10" data-tech-h1>
  <h2
    class="cursor-pointer font-bold w-fit md:mx-0 md:ml-5 sm:text-3xl xs:text-[30px] xs:mx-auto"
  >
    Tecnologias
  </h2>
</div>
<div
  class="overflow-x-hidden whitespace-nowrap cursor-pointer bg-[rgb(227,228,236)]"
  date-tech-wrapper
>
  <div class="tech-card inline-block">
    {
      technologies.map((tech) => (
        <div class="inline-block m-0">
          <TechnologyCard text={tech.text} logo={tech.logo} />
        </div>
      ))
    }
    <div class="inline-block m-0">
      <div class="flex items-center mr-16">
        <SiPowerbi
          color="#5a6162"
          size="55px"
          className="text-[60px] p-1  border-2 bg-clip-text "
        />
        <span
          class="text-2xl ml-6 font-bold bg-clip-text text-transparent
        bg-gradient-to-t from-gray-600
        via-black/70 to-black/90 rounded-lg"
          >BI</span
        >
      </div>
    </div>
    <div class="inline-block m-0">
      <div class="flex items-center mr-16">
        <SiMicrosoftsqlserver size="55px" color="#5a6162" />
        <span
          class="text-2xl ml-6 font-bold bg-clip-text text-transparent
        bg-gradient-to-t from-gray-600
        via-black/70 to-black/90 rounded-lg"
          >SQL</span
        >
      </div>
    </div>
    <div class="inline-block m-0">
      <div class="flex items-center mr-16">
        <SiNestjs size="55px" color="#5a6162" />
        <span
          class="text-2xl ml-6 font-bold bg-clip-text text-transparent
        bg-gradient-to-t from-gray-600
        via-black/70 to-black/90 rounded-lg"
          >NestJS</span
        >
      </div>
    </div>
    <div class="inline-block m-0">
      <div class="flex items-center mr-16">
        <SiNextdotjs size="55px" color="#5a6162" />
        <span
          class="text-2xl ml-6 font-bold bg-clip-text text-transparent
        bg-gradient-to-t from-gray-600
        via-black/70 to-black/90 rounded-lg"
          >Next JS</span
        >
      </div>
    </div>

    <div class="inline-block m-0">
      <div class="flex items-center mr-16">
        <SiAstro  size="55px" color="#5a6162" />
        <span
          class="text-2xl ml-6 font-bold bg-clip-text text-transparent
        bg-gradient-to-t from-gray-600
        via-black/70 to-black/90 rounded-lg"
          >Astro</span
        >
      </div>
    </div>

  </div>
</div>

<div
  class="w-screen h-screen bg-black/70 fixed top-0 left-0 z-[100] justify-center items-center hidden overflow-auto"
  data-tech-modal
>
  <div
    class="tech-modal w-4/5 h-[75%] overflow-y-auto flex flex-wrap justify-center items-center gap-x-5 gap-y-4 bg-orange-500 rounded-lg p-3 overflow-auto"
    data-tech-stop
  >
    {
      technologies.map((tech) => (
        <div class="inline-block m-0">
          <TechnologyCard text={tech.text} logo={tech.logo} />
        </div>
      ))
    }
    <div class="inline-block m-0">
      <div class="flex items-center mr-16">
        <SiPowerbi
          color="#5a6162"
          size="55px"
          className="text-[60px] p-1  border-2 bg-clip-text "
        />
        <span
          class="text-2xl ml-6 font-bold bg-clip-text text-transparent
      bg-gradient-to-t from-gray-600
      via-black/70 to-black/90 rounded-lg"
          >BI</span
        >
      </div>
    </div>
    <div class="inline-block m-0">
      <div class="flex items-center mr-16">
        <SiMicrosoftsqlserver size="55px" color="#5a6162" />
        <span
          class="text-2xl ml-6 font-bold bg-clip-text text-transparent
      bg-gradient-to-t from-gray-600
      via-black/70 to-black/90 rounded-lg"
          >SQL</span
        >
      </div>
    </div>
    <div class="inline-block m-0">
      <div class="flex items-center mr-16">
        <SiNestjs size="55px" color="#5a6162" />
        <span
          class="text-2xl ml-6 font-bold bg-clip-text text-transparent
      bg-gradient-to-t from-gray-600
      via-black/70 to-black/90 rounded-lg"
          >Nest JS</span
        >
      </div>
    </div>
    <div class="inline-block m-0">
      <div class="flex items-center mr-16">
        <SiNextdotjs size="55px" color="#5a6162" />
        <span
          class="text-2xl ml-6 font-bold bg-clip-text text-transparent
      bg-gradient-to-t from-gray-600
      via-black/70 to-black/90 rounded-lg"
          >Next JS</span
        >
      </div>
    </div>
  </div>
</div>
